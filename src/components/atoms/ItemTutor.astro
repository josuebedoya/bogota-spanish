---
import slugify from "@/utils/slug.ts";

interface Props {
  image: string;
  name: string;
  chargue: string;
  id: string;
}
const { image, name, chargue, id } = Astro.props;
---

<div class="single-team-item style-01">
  <div class="thumbnail">
    <img src={image} alt={name} />
  </div>
  <div class="content">
    <h4 class="title">
      <a
        href={"/tutors/" + slugify(name + "-" + id)}
        target="_blank"
        rel="noopener noreferrer">{name}</a
      >
    </h4>
    <p class="designation">{chargue}</p>
  </div>
</div>
