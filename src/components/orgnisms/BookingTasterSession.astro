---
import BtnWrap from "../atoms/BtnWrap.astro";

interface Props {
  title: string;
  summary: string;
  button: {
    label: string;
    link: string;
  };
  image: string;
}

const { title, summary, button, image } = Astro.props;
---

<section class="about-section-area-wrapper section-bottom-space">
  <div class="container custom-container-01">
    <div class="row align-items-center justify-content-between">
      <div class="col-lg-6 col-md-12">
        <div class="about-content">
          <h3 class="content-title">{title}</h3>
          <div set:html={summary} />

          <BtnWrap
            label={button?.label}
            link={button?.link}
            class="btn-common btn-new"
          />
        </div>
      </div>
      <div class="col-lg-6 col-md-12">
        <div class="thumbnail text-right">
          <img src={image} alt={title} />
        </div>
      </div>
    </div>
  </div>
</section>
