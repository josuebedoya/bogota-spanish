---
import ShipeSvg1 from "@/components/atoms/ShipeSvg1.astro";
import ItemStudentVideo from "@/components/atoms/itemStudentVideo.astro";
import ItemSlide from "@/components/atoms/ItemSlide.astro";
import Slider from "@/components/species/Slider.astro";

type item = {
  title: string;
  summary: string;
  image: string;
  videoUrl: string;
};

interface Props {
  phrase?: string;
  title?: string;
  items: item[];
}
const {phrase, title = "", items} = Astro.props as Props;
const configSlider = {
  "data-infinite": "false",
  "data-arrows": "false",
  "data-fade": "false",
  "data-speed": "500",
  "data-slidesToShow": "4",
  "data-slidesToScroll": "1",
  "data-swipeToSlide": "true",
  "data-autoplay": "true",
  "data-centerInsufficientSlides": "true",
  "data-autoplaySpeed": "2500",
  "data-dots": "false",
  "data-responsive": `[
    {"breakpoint": 1200,"settings": {"slidesToShow": 3}},
    {"breakpoint": 992,"settings": {"slidesToShow": 3}},
    {"breakpoint": 768, "settings": {"slidesToShow": 2}},
    {"breakpoint": 540, "settings": {"slidesToShow": 1}}
  ]`,
};
---

<section class="feedback-section margin-top-110">
 <div class="container custom-container-01">
  <div class="row justify-content-center">
   <div class="col-lg-12">
    <div class="theme-section-title desktop-center text-center">
      {phrase && <span class="subtitle text-uppercase">{phrase}</span>}
     <h4 class="title">
       {title}
      <ShipeSvg1/>
     </h4>
    </div>
   </div>
  </div>
  <div class="row">
   <Slider config={configSlider}>
     {items?.map((item: item) => (
       <ItemSlide>
        <ItemStudentVideo
          title={item?.title}
          summary={item?.summary}
          image={item?.image}
          videoUrl={item?.videoUrl}
        />
       </ItemSlide>
     ))}
   </Slider>
  </div>
 </div>
</section>
