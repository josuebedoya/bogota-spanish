---
import BtnWrap from "../atoms/BtnWrap.astro";

interface Props {
    phrase?: string;
    title: string;
    summary: string;
    titleList?: string;
    listLevels?: { Icon: string; Summary_Text: string }[];
    button?: {
        label: string;
        link: string;
    };
    image: string
}
const { phrase, title, summary, titleList, listLevels, button,image }: Props = Astro.props;
---

<section class="about-section-area section-bottom-space">
        <div class="container custom-container-01">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 order-lg-1 order-2">
                    <div class="about-content">
                        {phrase && <p class="subtitle">{phrase}</p>}
                        <h3 class="content-title">{title}</h3>

                        <p class="paragraph">{summary}</p>

                        {titleList && <p class="paragraph"><strong>{titleList}</strong></p>}

                        {listLevels && <div class="icon-box-with-text-wrap">
                            <ul class="ul icon-box-with-text style-01">
                                <!-- Map to list items levels -->
                                {
                                    listLevels?.map((item, i) => (
                                        <li class="single-icon-box-with-text">
                                            <div
                                                class={`icon-wrap color-0${(i % 5) + 1}`}
                                            >
                                                <i class={item.Icon} />
                                            </div>
                                            <div class="content">
                                                <p class="text">
                                                    {item.Summary_Text}
                                                </p>
                                            </div>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>}
                         {button && <BtnWrap
                            label={button?.label}
                            link={button?.link}
                            class="btn-common btn-new"
                        /> }
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 order-lg-2 order-1 sc-1">
                    <div class="thumbnail">
                        <div class="right-frame">
                            <img src={image} alt={title} />
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>