---
import { directusMedia, directus } from "@/server/directus";
import { readSettings } from "@directus/sdk";
const { title, description } = Astro.props;
const siteSettings = await directus.request(readSettings());
const favicon = await directusMedia(siteSettings?.public_favicon, title);
import "@/styles/main.css";
import { PUBLIC_RECAPTCHA_SITE_KEY as KEY } from "astro:env/client";
---

<head>
  <meta charset="UTF-8" />
  <link
    rel="icon"
    type="image/png"
    href={favicon?.src_path || "/assets/img/logos/logo-mobile.png"}
  />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <link rel="canonical" href={Astro.request.url} />
  <title>{title}</title>

  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={Astro.request.url} />
  <meta property="og:site_name" content={siteSettings?.public_project_name} />
  <meta property="og:type" content="website" />

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />

  <!-- ReCAPTCHA -->
  <script defer src={`https://www.google.com/recaptcha/api.js?render=${KEY}`}
  ></script>
</head>
