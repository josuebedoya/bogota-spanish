---
const { title, description } = Astro.props;
import Header from "@/components/orgnisms/Header.astro";
import Head from "@/layouts/Head.astro";
import Footer from "@/components/orgnisms/Footer.astro";
import { defaultLang } from "@/i18n/ui";

// Lang site
const lang = Astro.params.lang || defaultLang;
---

<html lang={lang}>
	<Head title={title} description={description} />
	<body>
		<div id="imGrapper">
			<div id="imContent">
				<div class="preloader" id="preloader">
					<div class="preloader-inner">
						<div class="loader"></div>
					</div>
				</div>

				<div class="body-overlay" id="body-overlay"></div>
				<div class="search-popup" id="search-popup">
					<form
						action="/api/search/v1/search"
						method="GET"
						class="search-form d-flex"
					>
						<div class="form-group">
							<input
								type="text"
								name="q"
								class="form-control"
								placeholder="Search....."
								required="true"
							/>
						</div>
						<button class="btn-send" type="submit"
							><i class="fas fa-search"></i></button
						>
					</form>

					<div class="modal-result"></div>
				</div>

				<main class="page-wrapper">
					<Header />
					<slot />
					<Footer />
				</main>
			</div>
		</div>

		<!-- Scripts Load -->

		<!-- Font Awesome -->
		<script
			src="https://kit.fontawesome.com/56d3d5dce0.js"
			crossorigin="anonymous"
			defer></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/js/v4-shims.min.js"
			integrity="sha512-pd9YFLsGdZIRG1ChLLdpxgGT+xR7rVjsHqm6RP0toUadPB4XZZ7LlqzX3IhnpMd2Cb8b2s8yVFwY21epgr84qw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
			defer></script>
		<!-- End Font Awesome -->

		<!-- Bootstrap.min.js -->
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/js/bootstrap.min.js"
			integrity="sha512-a6ctI6w1kg3J4dSjknHj3aWLEbjitAXAjLDRUxo2wyYmDFRcz2RJuQr5M3Kt8O/TtUSp8n2rAyaXYy1sjoKmrQ=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"></script>
		<!-- End Bootstrap.min.js -->

		<!-- Google Tag Manager -->
		<script is:inline defer>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-KBVR27K2");
		</script>
		<!-- End Google Tag Manager -->

		<!-- custom scripts -->
		<script is:inline src="/assets/js/jquery-3.6.0.min.js" defer></script>
		<script is:inline src="/assets/js/imagesloaded.pkgd.min.js" defer></script>
		<script is:inline src="/assets/js/jquery.magnific-popup.js" defer></script>
		<script is:inline src="/assets/js/jquery.waypoints.js" defer></script>
		<script is:inline src="/assets/js/main.js" defer></script>
		<script is:inline src="/assets/js/slick.min.js" defer></script>
		<script is:inline src="/assets/js/swiper.min.js" defer></script>
		<script is:inline src="/assets/js/viewport.jquery.js" defer></script>
		<script is:inline src="/assets/js/custom.js" defer></script>
		<!-- End custom scripts -->
	</body>
</html>
