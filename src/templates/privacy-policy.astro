---
import LayoutPage from "@/layouts/LayoutPage.astro";
import directus from "@/server/directus";
import { readItems } from "@directus/sdk";
import DefaultPage from "@/components/orgnisms/DefaultPage.astro";

const dataPage = await directus.request(readItems("policy_privacy"));
---

<LayoutPage
  title={dataPage?.title_page || "Privacy and Policy"}
  description={dataPage?.description || ""}
>
  <DefaultPage dataPage={dataPage} />
</LayoutPage>
